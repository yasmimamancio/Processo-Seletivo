/* b) 2, 4, 8, 16, 32, 64, ____ próximo número 128 , porque está sendo imprimido o dobro do anterior*/

import java.util.Scanner;
 
public class Main {
	public static void main(String[] args) {
	
	 Scanner sc = new Scanner(System.in);
	 
	 int dobro, total_numero; 
	 
	 System.out.print("Quantos números vão ter na sequência: ");
	 total_numero = sc.nextInt();
	 
	 dobro = 2;
	 for (int i = 1; i <= total_numero; i++) {
	    System.out.print(dobro + " ");
	    dobro *= 2;
	 }
	sc.close();
    }
}
