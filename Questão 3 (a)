/* a) 1, 3, 5, 7, ___ próximo número 9*/

import java.util.Scanner;
 
public class Main {
	public static void main(String[] args) {
	
	 Scanner sc = new Scanner(System.in);
	 
	 int next_impar, n; 
	 
	 System.out.print("Escreva um número: ");
	 n = sc.nextInt();
	 
	 if (n % 2 == 0) {
	     next_impar = n + 1;
	 }
	 else {
	     next_impar = n + 2;
	 }
	
	 System.out.print(next_impar);
	sc.close();
	}
}
